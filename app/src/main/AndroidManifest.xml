<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matthew.letseatversion1" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name=".eventinbox"
            android:value="com.example.matthew.letseatversion1.eventinbox" >
        </activity>

        <activity
            android:name=".LoginScreen"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".accountCreationScreen"
            android:label="@string/title_activity_account_creation_screen"
            android:parentActivityName=".LoginScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matthew.letseatversion1.LoginScreen" />
        </activity>
        <activity
            android:name=".UserAccountScreen"
            android:label="@string/title_activity_user_account_screen" >
        </activity>
        <activity
            android:name=".OldEventScreen"
            android:label="@string/title_activity_resturant_screen" >
        </activity>
        <activity
            android:name=".EventScreen"
            android:label="@string/title_activity_event_screen" >
        </activity>
        <activity
            android:name=".EditAccountScreen"
            android:label="@string/title_activity_edit_account_screen" >
        </activity>
        <activity
            android:name=".SelectPreferencesScreen"
            android:label="@string/title_activity_select_preferences_screen" >
        </activity>
        <activity
            android:name=".RestaurantScreen"
            android:label="@string/title_activity_resturant_screen"
            android:parentActivityName=".LoginScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.matthew.letseatversion1.LoginScreen" />
        </activity>
        <activity
            android:name=".Inbox"
            android:label="@string/title_activity_inbox" >
        </activity>
    </application>

</manifest>
